{
  "name": "umich-lib-design-system",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@storybook/html": "^5.2.8",
    "@types/node": "^13.5.0",
    "babel-loader": "^8.0.6",
    "lerna": "^3.20.2"
  },
  "scripts": {
    "lerna:bootstrap": "lerna bootstrap --hoist",
    "prelerna:publish": "npm run build",
    "lerna:publish": "lerna publish",
    "prelerna:publish-force": "npm run build",
    "lerna:publish-force": "lerna publish --force-publish",
    "prestart": "npm run build",
    "start": "lerna run start --stream --parallel",
    "prebuild": "npm run lerna:bootstrap && lerna run build --scope @umich-lib/css --scope @umich-lib/components --scope @umich-lib/icons",
    "build": "lerna run build --ignore @umich-lib/css --ignore @umich-lib/components --ignore @umich-lib/icons"
  }
}
